{
	"include": ["src", "index.ts", "index.d.ts"],
	"compilerOptions": {
		"declaration": true,
		"strict": true,
		"target": "ES2022",
		"module": "NodeNext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"stripInternal": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"composite": true,
		"outDir": "dist"
	}
}
